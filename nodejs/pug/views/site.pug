doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Ngopi - Coffeeshop Landing Page
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', rel='stylesheet')
    style.
      body {
      font-family: 'Poppins', sans-serif;
      }
      .hero-section {
      background: url('https://picsum.photos/1920/800?random=1') no-repeat center center;
      background-size: cover;
      height: 100vh;
      display: flex;
      align-items: center;
      color: white;
      text-align: center;
      }
      .hero-section h1 {
      font-size: 3.5rem;
      font-weight: 700;
      }
      .menu-section {
      padding: 80px 0;
      background-color: #f8f1e9;
      }
      .about-section {
      padding: 80px 0;
      background-color: #fff;
      }
      .testimonials-section {
      padding: 80px 0;
      background-color: #f8f1e9;
      }
      .contact-section {
      padding: 80px 0;
      background-color: #fff;
      }
      .navbar {
      background-color: rgba(0, 0, 0, 0.8);
      }
      .card {
      border: none;
      transition: transform 0.3s;
      }
      .card:hover {
      transform: translateY(-10px);
      }
      .btn-primary {
      background-color: #d4a373;
      border-color: #d4a373;
      }
      .btn-primary:hover {
      background-color: #b08968;
      border-color: #b08968;
      }
  body
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-dark.fixed-top
      .container
        a.navbar-brand(href='#') Ngopi
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='#home') Home
            li.nav-item
              a.nav-link(href='#menu') Menu
            li.nav-item
              a.nav-link(href='#about') About
            li.nav-item
              a.nav-link(href='#testimonials') Testimonials
            li.nav-item
              a.nav-link(href='#contact') Contact
    // Hero Section
    section#home.hero-section
      .container
        h1 Welcome to Ngopi
        p.lead Discover the best coffee experience in town.
        a.btn.btn-primary.btn-lg(href='#menu') Explore Menu
    // Menu Section
    section#menu.menu-section
      .container
        h2.text-center.mb-5 Our Menu
        .row
           each row in menu
            .col-md-4.mb-4
              .card
                img.card-img-top(src=`/images/${row.photo}`, alt=row.name)
                .card-body
                  h5.card-title #{row.name}
                  p.card-text #{row.detail}
                  p.card-text
                    strong #{row.price}
        
    // About Section
    section#about.about-section
      .container
        h2.text-center.mb-5 About Us
        .row
          .col-md-6
            img.img-fluid(src='https://picsum.photos/500/300?random=1', alt='Cappuccino')
          .col-md-6
            p
              | Ngopi is more than just a coffee shop; it&rsquo;s a place where coffee lovers come together to enjoy premium blends in a cozy environment. Our beans are sourced from the finest farms, ensuring every cup is a masterpiece.
            p Join us for a unique coffee experience that warms the heart and soul.
    // Testimonials Section
    section#testimonials.testimonials-section
      .container
            h2.text-center.mb-5 What Our Customers Say
            .row
                each row in testimonials
                    .col-md-3.mb-4
                        .card
                            .card-body
                                p.card-text #{row.message}
                                h5.card-title #{row.name}
    // Contact Section
    section#contact.contact-section
      .container
        h2.text-center.mb-5 Contact Us
        .row.justify-content-center
          .col-md-6
            form
              .mb-3
                label.form-label(for='name') Name
                input#name.form-control(type='text', placeholder='Your Name')
              .mb-3
                label.form-label(for='email') Email
                input#email.form-control(type='email', placeholder='Your Email')
              .mb-3
                label.form-label(for='message') Message
                textarea#message.form-control(rows='5', placeholder='Your Message')
              button.btn.btn-primary.w-100(type='submit') Send Message
    // Footer
    footer.bg-dark.text-white.text-center.py-4
      p &copy; 2025 Ngopi. All rights reserved.
    script(src='/js/bootstrap.bundle.min.js')