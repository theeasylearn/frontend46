doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title BPLAY - About Page
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', rel='stylesheet')
    style.
      body {
      font-family: Arial, sans-serif;
      }
      .header {
      background-color: #1e3a8a;
      color: white;
      padding: 20px 0;
      }
      .header .navbar-brand {
      font-size: 1.5rem;
      font-weight: bold;
      }
      .header .nav-link {
      color: white !important;
      margin-left: 15px;
      }
      .header .btn {
      background-color: #4b5cc4;
      color: white;
      }
      .about-section {
      padding: 50px 0;
      background-color: #f3f4f6;
      }
      .about-section .card {
      background-color: #ffffff;
      border: none;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .team-section {
      padding: 50px 0;
      }
      .team-section .card {
      background-color: transparent;
      border: none;
      }
      .team-section img {
      border-radius: 50%;
      width: 150px;
      height: 150px;
      object-fit: cover;
      filter: blur(5px);
      }
      .footer {
      background-color: #1e293b;
      color: white;
      padding: 30px 0;
      }
      .footer a {
      color: #93c5fd;
      text-decoration: none;
      }
      .footer a:hover {
      text-decoration: underline;
      }
