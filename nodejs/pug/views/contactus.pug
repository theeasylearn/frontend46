doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title BPLAY - Contact Page
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', rel='stylesheet')
    style.
      body {
      font-family: Arial, sans-serif;
      }
      .header {
      background-color: #1e3a8a;
      color: white;
      padding: 20px 0;
      }
      .header .navbar-brand {
      font-size: 1.5rem;
      font-weight: bold;
      }
      .header .nav-link {
      color: white !important;
      margin-left: 15px;
      }
      .header .btn {
      background-color: #4b5cc4;
      color: white;
      }
      .contact-section {
      padding: 50px 0;
      background-color: #f3f4f6;
      }
      .contact-section .card {
      background-color: #ffffff;
      border: none;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .contact-form {
      max-width: 400px;
      margin: 0 auto;
      }
      .footer {
      background-color: #1e293b;
      color: white;
      padding: 30px 0;
      }
      .footer a {
      color: #93c5fd;
      text-decoration: none;
      }
      .footer a:hover {
      text-decoration: underline;
      }
  body
    // Header
    include header.pug
    // Contact Section
    section.contact-section
      .container
        .row.justify-content-center
          .col-md-6.text-center
            h6 CONTACT US
            h2 Let&apos;s talk about you! Love to hear from you!
          .col-md-4
            .card.p-4
              h5 Send us a Message
              form
                .mb-3
                  label.form-label Full Name*
                  input.form-control(type='text', value='Adam Gelius', readonly='')
                .mb-3
                  label.form-label Email*
                  input.form-control(type='email', value='example@yourmail.com', readonly='')
                .mb-3
                  label.form-label Phone*
                  input.form-control(type='text', value='+885 154 5211 552', readonly='')
                .mb-3
                  label.form-label Message*
                  textarea.form-control(rows='3', placeholder='type your message here', readonly='')
                button.btn.btn-primary.w-100(type='submit') Send Message
    .container-fluid.my-3
      .row
        .row
          .col-lg-2
          .col-lg-3
            p.text-muted.mt-3
              i.bi.bi-geo-alt
              |  Our Location
              <br/>
              | 401 Broadway, 24th Floor,
              <br/>
              |Orchard
              <br/>
              | Cloud View, London
          .col-lg-3
            p.text-muted.mt-2
              i.bi.bi-envelope
              |  How Can We Help?
              <br/>
              | info@yourdomain.com
    // Footer
    include footer.pug
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
    script(src='https://kit.fontawesome.com/a076d05399.js')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css')