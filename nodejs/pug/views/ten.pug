doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Indian Players - T20 World Cup 2024
    // Bootstrap 5 CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet')
  body.p-4
    .container
      h2.mb-4.text-center Indian Squad - T20 World Cup 2024
      .table-responsive
        table.table.table-striped.table-bordered.table-hover.align-middle
          thead.table-dark.text-center
                tr
                th No
                th Name
                th Age
                th Country
                th Role
                th Batting Style
                th Bowling Style
                th Matches Played
                th Total Runs
                th Centuries
                th Is Captain?
          tbody#players-table
                each row,index in players
                    tr
                        td #{index+1} 
                        each column in row
                            td #{column}
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js')